<?xml version="1.0" encoding="utf-8" ?>
<StackPanel Orientation="Vertical"
             HorizontalAlignment="Center"
             VerticalAlignment="Middle">

  <CheckBox HorizontalAlignment="Left" Margin="10">
    <TextBlock Margin="2,0,0,0"
               Text="{i18n:System:EnableShadows}"
               Color="ffffffff"
               HorizontalAlignment="Left" />
  </CheckBox>

  <CheckBox HorizontalAlignment="Left" Margin="10">
    <TextBlock Margin="2,0,0,0"
               Text="{i18n:System:EnableSoftShadows}"
               Color="ffffffff"
               HorizontalAlignment="Left" />
  </CheckBox>

  <Grid Margin="10">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="Auto" />
    </Grid.ColumnDefinitions>

    <Button Id="DecreaseShadowSizeButton" Grid.Column="0">
      <TextBlock Text="-" />
    </Button>

    <TextBlock Id="ShadowSizeText" Grid.Column="1" Margin="2" Width="100" HorizontalAlignment="Center" Color="ffffffff"/>

    <Button Id="IncreaseShadowSizeButton" Grid.Column="2">
      <TextBlock Text="+" />
    </Button>
  </Grid>

  <StackPanel Orientation="Horizontal">
    <Button Id="BackToMainMenuButton" HorizontalAlignment="Left" Margin="5">
      <TextBlock Text="{i18n:System:Back}" />
    </Button>
    <Button  Id="SaveSettingsButton" HorizontalAlignment="Left" Margin="5">
      <TextBlock Text="{i18n:System:Save}" />
    </Button>
  </StackPanel>
</StackPanel>